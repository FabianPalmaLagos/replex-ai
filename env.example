# ==============================================
# REPLEX AI - VARIABLES DE ENTORNO
# ==============================================
# Copia este archivo como .env y configura los valores

# ==============================================
# CONFIGURACIÓN GENERAL
# ==============================================
NODE_ENV=development
PORT=3000
API_VERSION=v1

# ==============================================
# BASE DE DATOS
# ==============================================
# PostgreSQL
DATABASE_URL=postgresql://replex_user:replex_password@localhost:5432/replex_ai
DB_HOST=localhost
DB_PORT=5432
DB_NAME=replex_ai
DB_USER=replex_user
DB_PASSWORD=replex_password
DB_SSL=false

# ==============================================
# CACHE Y SESIONES
# ==============================================
# Redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ==============================================
# AUTENTICACIÓN Y SEGURIDAD
# ==============================================
# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Encriptación
ENCRYPTION_KEY=your-32-character-encryption-key-here

# CORS
CORS_ORIGIN=http://localhost:3001

# ==============================================
# APIS EXTERNAS - IA
# ==============================================
# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4

# Anthropic Claude
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Stability AI
STABILITY_API_KEY=your-stability-ai-api-key-here

# ==============================================
# APIS EXTERNAS - TEXT TO SPEECH
# ==============================================
# ElevenLabs
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here

# Google Cloud TTS
GOOGLE_CLOUD_TTS_KEY=your-google-cloud-tts-key-here

# ==============================================
# APIS EXTERNAS - REDES SOCIALES
# ==============================================
# TikTok
TIKTOK_CLIENT_ID=your-tiktok-client-id
TIKTOK_CLIENT_SECRET=your-tiktok-client-secret

# Instagram
INSTAGRAM_CLIENT_ID=your-instagram-client-id
INSTAGRAM_CLIENT_SECRET=your-instagram-client-secret

# YouTube
YOUTUBE_CLIENT_ID=your-youtube-client-id
YOUTUBE_CLIENT_SECRET=your-youtube-client-secret

# ==============================================
# ALMACENAMIENTO
# ==============================================
# AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=replex-ai-assets

# ==============================================
# MONITOREO Y LOGS
# ==============================================
# Logging
LOG_LEVEL=debug
LOG_FORMAT=combined

# Sentry (opcional)
SENTRY_DSN=your-sentry-dsn-here

# ==============================================
# DESARROLLO
# ==============================================
# Hot reload
CHOKIDAR_USEPOLLING=true

# Debug
DEBUG=replex:* 